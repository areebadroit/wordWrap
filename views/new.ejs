<%- include("partials/header")%>
<div class="wrapper">
<div class="ui main text container segment">
    <div class="ui huge header"> 
        New Blog
    </div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
          <label>Title</label>
          <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
          <label>Upload Image</label>
          <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Any thing you would like to share</label>
            <textarea type="text" name="blog[body]" placeholder="Blog goes here"></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
      </form>
</div>
</div>
<%- include("partials/footer") %>