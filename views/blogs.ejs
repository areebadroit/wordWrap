<%- include("partials/header")%>
<div class="container">
    <% if(currentUser){%> 
        <div style="text-align: right">
            <a href="/blogs/new"class="btn btn-secondary">Add new post</a>
        </div>
        <% } %>
        <div>
         
    <div class="row">
        <div class="col-lg-12">
            <h3></h3>
        </div>
    </div>
    <div class="row justify-content-center" style="display: flex; flex-wrap: wrap;">
        <% blogs.forEach( (blog) => {%>
            <div class="col-md-12 col-lg-7">
                
            <div class="card ">
                <div class="card-header">
                    <a href="/profile/<%= blog.author.id %>"><%= blog.author.username %></a>
                </div>
                <a href="/blogs/<%=blog._id%>">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <img class="img-fluid blog-img img-thumbnail" src="/image/<%= blog.image %>">
                    </div></a>
                  <blockquote class="blockquote mb-0">
                    <p><%=blog.title%></p>
                    <footer class="blockquote-footer"><%=blog.body.substring(0,90)%><cite title="Source Title"></cite></footer>
                    <a href="/blogs/<%=blog._id%>" class="btn " style="display: inline;">read more</a>
                  </blockquote>
                </div>
            
              </div>
            </div>
        <%});%>
    </div>
</div>